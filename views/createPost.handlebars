<div id="createPostModal" class="hidden fixed z-10 inset-0 overflow-y-auto">
    <div class="flex items-center justify-center min-h-screen">
        <form class="bg-white rounded-lg w-1/2" onsubmit="submitPost(event)">
        <!-- Modal header -->
        <div class="flex justify-between items-center border-b p-3 text-lg">
            <h3 class="text-gray-900">Create a Post</h3>
            <button type="button" onclick="toggleModal('createPostModal')">
            <span class="text-gray-900">&times;</span>
            </button>
        </div>
        <!-- Modal body -->
        <div class="p-3">
            <textarea id="postText" name="postText" rows="4" class="w-full border p-2" placeholder="Text" required></textarea>
        </div>
        <!-- Modal footer -->
        <div class="flex justify-end items-center p-3 border-t">
            <button type="button" onclick="toggleModal('createPostModal')" class="bg-gray-200 hover:bg-gray-300 rounded text-gray-900 py-2 px-4 mr-2">Cancel</button>
            <input type="submit" value="Create" class="cursor-pointer bg-blue-600 hover:bg-blue-700 rounded text-white py-2 px-4">
        </div>
        </form>
    </div>
</div>

<script src="../public/js/posts/createPost.js"></script>