<div class="h-full p-3 space-y-2 w-60 dark:bg-gray-900 dark:text-gray-100">
    <div class="flex items-center p-2 space-x-4">
        <img src="{{user.profilePictureUrl}}" alt="" class="w-12 h-12 rounded-full dark:bg-gray-500">
        <div>
            <h2 class="text-lg font-semibold">{{user.name}}</h2>
            <span class="flex items-center space-x-1">
                <a rel="noopener noreferrer" href="#" class="text-xs hover:underline dark:text-gray-400">View profile</a>
            </span>
        </div>
    </div>
    <div class="divide-y dark:divide-gray-700">
        <ul class="pt-2 pb-4 space-y-1 text-sm">
            {{#each menuItems}}
            <li class="{{#if this.isActive}}dark:bg-gray-800 dark:text-gray-50{{/if}}">
                <a rel="noopener noreferrer" href="{{this.link}}" class="flex items-center p-2 space-x-3 rounded-md">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="w-5 h-5 fill-current dark:text-gray-400">
                        {{! SVG Path goes here}}
                        {{this.svgPath}}
                    </svg>
                    <span>{{this.name}}</span>
                </a>
            </li>
            {{/each}}
        </ul>
        <ul class="pt-4 pb-2 space-y-1 text-sm">
            {{#each settingsItems}}
            <li>
                <a rel="noopener noreferrer" href="{{this.link}}" class="flex items-center p-2 space-x-3 rounded-md">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="w-5 h-5 fill-current dark:text-gray-400">
                        {{! SVG Path goes here}}
                        {{this.svgPath}}
                    </svg>
                    <span>{{this.name}}</span>
                </a>
            </li>
            {{/each}}
        </ul>
    </div>
</div>
