<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Page Not Found</title>
    <link rel="stylesheet" href="./css/404/style.css">
  </head>
  <body>
    <div id="message">
      <h2>{{errorCode}}</h2>
      <h1>{{errorMessage}}</h1>
      <p>{{errorDescription}}</p>
      <h3>{{whyAmISeeingThis}}</h3>
      <p>{{pageGenerationInfo}}</p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/handlebars@4.7.7"></script>
    <script id="404-template" type="text/x-handlebars-template">
      <div id="message">
        <h2>{{errorCode}}</h2>
        <h1>{{errorMessage}}</h1>
        <p>{{errorDescription}}</p>
        <h3>{{whyAmISeeingThis}}</h3>
        <p>{{pageGenerationInfo}}</p>
      </div>
    </script>
    <script>
      // Compile the Handlebars template
      var source = document.getElementById("404-template").innerHTML;
      var template = Handlebars.compile(source);

      // Render the template
      var context = {
        errorCode: "404",
        errorMessage: "Page Not Found",
        errorDescription: "The specified file was not found on this website. Please check the URL for mistakes and try again.",
        whyAmISeeingThis: "Why am I seeing this?",
        pageGenerationInfo: "This page was generated by the Firebase Command-Line Interface. To modify it, edit the <code>404.html</code> file in your project's configured <code>public</code> directory."
      };
      var html = template(context);

      // Insert the rendered template into the DOM
      document.getElementById("message").innerHTML = html;
    </script>
  </body>
</html>
